{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@microfrontends/shared/data-access-user": [
        "libs/shared/data-access-user/src/index.ts"
      ],
      "@microfrontends/songs/data": ["apps/songs/data/src/index.ts"],
      "@microfrontends/songs/feature": ["apps/songs/feature/src/index.ts"],
      "@microfrontends/songs/model": ["apps/songs/model/src/index.ts"],
      "@microfrontends/songs/ui": ["apps/songs/ui/src/index.ts"],
      "login/Module": ["apps/login/src/app/remote-entry/entry.module.ts"],
      "songs/Module": ["apps/songs/src/app/remote-entry/entry.module.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
